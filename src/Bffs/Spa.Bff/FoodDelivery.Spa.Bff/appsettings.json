{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.HttpLogging.HttpLoggingMiddleware": "Information"
    }
  },
  "CorsOptions": {
    "AllowedOrigins": [
      "https://localhost:5173"
    ]
  },
  "Redirects": {
    "ReactSpaAddress": "https://localhost:5173/"
  },
  "Clients": {
    "Catalogs": "http://localhost:4000",
    "Customers": "http://localhost:8000"
  },
  "InstrumentationName": "food-delivery.spa-bff",
  "OAuthOptions": {
    "CookieName": "__SPA-BFF",
    "ClientId": "spa-bff-code-flow",
    "ClientSecret": "secret",
    "ResponseType": "code",
    "ResponseMode": "query",
    "GetClaimsFromUserInfoEndpoint": true,
    "MapInboundClaims": false,
    "SaveTokens": true,
    "Scopes": [
      "offline_access",
      "openid",
      "profile",
      "catalogs:write",
      "catalogs:read",
      "catalogs:full",
      "customers:write",
      "customers:read",
      "customers:full",
      "gateway",
      "roles",
      "info"
    ],
    "Authority": "https://localhost:3001/auth"
  },
  "AllowedHosts": "*",
  "OpenTelemetryOptions": {
    "OpenTelemetryCollectorOptions": {
      "OTLPGrpExporterEndpoint": "http://localhost:4317"
    },
    "AspireDashboardOTLPOptions": {
      "OTLPGrpExporterEndpoint": "http://localhost:4319"
    },
    "ZipkinOptions": {
      "HttpExporterEndpoint": "http://localhost:9411/api/v2/spans"
    },
    "JaegerOptions": {
      "OTLPGrpcExporterEndpoint": "http://localhost:14317",
      "HttpExporterEndpoint": "http://localhost:14268/api/traces"
    },
    "UsePrometheusExporter": true,
    "UseOTLPExporter": true,
    "UseAspireOTLPExporter": true,
    "UseGrafanaExporter": false,
    "ServiceName": "SpaBff"
  },
  "Yarp": {
    "Routes": {
      "catalogs": {
        "ClusterId": "catalogs",
        "AuthorizationPolicy": "RequireAuthenticatedUserPolicy",
        "Match": {
          "Hosts": [ "localhost" ],
          "Path": "/catalogs/{**remainder}"
        },
        "Metadata": {
          "Duende.Bff.Yarp.TokenType": "User"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/catalogs"
          },
          {
            "RequestHeadersCopy": true
          },
          {
            "RequestHeader": "X-Forwarded-Prefix",
            "Set": "/catalogs"
          },
          { "X-Forwarded":  "Append"}
        ]
      },
      "identity": {
        "ClusterId": "identity",
        "Match": {
          "Hosts" : [ "localhost" ],
          "Path" : "/auth/{**remainder}"
        },
        "Transforms" : [
          { "PathRemovePrefix": "/auth" },
          { "X-Forwarded":  "Append"},
          {
            "RequestHeader": "X-Forwarded-Prefix",
            "Set": "/auth"
          }
        ]
      },
      "customers": {
        "ClusterId": "customers",
        "AuthorizationPolicy": "RequireAuthenticatedUserPolicy",
        "Match": {
          "Hosts": [ "localhost" ],
          "Path": "/customers/{**remainder}"
        },
        "Metadata": {
          "Duende.Bff.Yarp.TokenType": "User"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/customers"
          },
          {
            "RequestHeadersCopy": true
          },
          {
            "RequestHeader": "X-Forwarded-Prefix",
            "Set": "/customers"
          },
          { "X-Forwarded":  "Append"}
        ]
      }
    },
    "Clusters": {
      "catalogs": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "catalogs_https": {
            "Address": "https://localhost:1001/",
            "Health": "https://localhost:1001/health"
          },
          "catalogs_http": {
            "Address": "http://localhost:1000/",
            "Health": "http://localhost:1000/health"
          }
        },
        "HttpClient": {
          "DangerousAcceptAnyServerCertificate": false
        }
      },
      "identity": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "identity_https": {
            "Address": "https://localhost:7001",
            "Health": "https://localhost:7001/health"
          }
        }
      },
      "customers": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "customers_https": {
            "Address": "https://localhost:8001/",
            "Health": "https://localhost:8001/health"
          },
          "customers_http": {
            "Address": "http://localhost:8000/",
            "Health": "http://localhost:8000/health"
          }
        }
      }
    }
  }
}